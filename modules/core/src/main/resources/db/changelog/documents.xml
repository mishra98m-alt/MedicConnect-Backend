<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.22.xsd">

    <changeSet id="1-documents-table" author="medicconnect">
        <createTable tableName="documents">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="document_id" type="VARCHAR(255)">
                <constraints unique="true" nullable="false"/>
            </column>

            <column name="file_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <!-- store metadata separate from blob for faster queries -->
            <column name="content_type" type="VARCHAR(100)"/>
            <column name="size_bytes" type="BIGINT"/>

            <!-- file_data uses LONGBLOB for potentially large files -->
            <column name="file_data" type="LONGBLOB"/>

            <column name="verified" type="BOOLEAN" defaultValueBoolean="false"/>

            <column name="uploaded_at" type="DATETIME" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>

            <column name="person_id" type="BIGINT"/>
            <column name="organization_id" type="BIGINT"/>
        </createTable>

        <addForeignKeyConstraint baseTableName="documents"
                                 baseColumnNames="person_id"
                                 referencedTableName="person"
                                 referencedColumnNames="id"
                                 constraintName="fk_documents_person"/>

        <addForeignKeyConstraint baseTableName="documents"
                                 baseColumnNames="organization_id"
                                 referencedTableName="organization"
                                 referencedColumnNames="id"
                                 constraintName="fk_documents_org"/>

        <createIndex tableName="documents" indexName="idx_documents_document_id">
            <column name="document_id"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>
