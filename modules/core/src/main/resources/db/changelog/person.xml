<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.22.xsd">

    <changeSet id="1-create-person" author="medicconnect">
        <createTable tableName="person">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="uuid" type="VARCHAR(36)">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="first_name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="VARCHAR(100)"/>
            <column name="email" type="VARCHAR(255)"/>
            <column name="phone" type="VARCHAR(50)"/>
            <column name="dob" type="DATE"/>
            <column name="gender" type="VARCHAR(16)"/>
            <column name="created_at" type="DATETIME" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="updated_at" type="DATETIME" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="organization_id" type="BIGINT"/>
        </createTable>

        <addForeignKeyConstraint baseTableName="person"
                                 baseColumnNames="organization_id"
                                 referencedTableName="organization"
                                 referencedColumnNames="id"
                                 constraintName="fk_person_org"/>
        <createIndex tableName="person" indexName="idx_person_uuid">
            <column name="uuid"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
